{
  "manifest_version": 3,

  "name": "Bay Clock",
  "description": "Shows the schedule for the Bay School of San Francisco.",
  "version": "2.0",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "contextMenus"]
}